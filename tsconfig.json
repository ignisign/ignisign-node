{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "composite": true,
    "allowJs": false,
    "module": "commonjs",
    "target": "ES2019",
    "lib": [ "ES2019", "dom" ],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "**/*.d.ts",
    "dist/**/*"
  ]
}
